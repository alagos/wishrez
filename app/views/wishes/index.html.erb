<h1>Listing wishes</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Priority</th>
    <th>Arrival</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wishes.each do |wish| %>
  <tr>
    <td><%= wish.description %></td>
    <td><%= wish.priority %></td>
    <td><%= wish.arrival %></td>
    <td><%= wish.status %></td>
    <td><%= link_to 'Show', wish %></td>
    <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
    <td><%= link_to 'Destroy', wish, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

